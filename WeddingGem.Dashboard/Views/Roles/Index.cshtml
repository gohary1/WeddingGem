
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <h3>Roles</h3>
    <div class="my-3"><a class="btn btn-success px-2 py-1" asp-action="create">Create a new Role</a></div>
    @if (Model.Count() > 0)
    {
      <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(role=>role.Id)</th>
                <th>@Html.DisplayNameFor(role => role.Name)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                @foreach(var role in Model)
                {
                <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a class="btn btn-outline-info px-4" asp-action="Edit" asp-route-id="@role.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
                </tr>  
                }
                
        </tbody>
        </table>
    }

    else
    {
    <div class="mt-5 d-flex justify-content-center">
        <h3>There is No Roles yet</h3>
    </div>
    }
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

