@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
<h3>Users</h3>
<div class="my-3"><a class="btn btn-success px-2 py-1" asp-action="create">Create a new User</a></div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(role => role.Id)</th>
                <th>@Html.DisplayNameFor(role => role.UserName)</th>
                <th>@Html.DisplayNameFor(role => role.Email)</th>
                <th>@Html.DisplayNameFor(role => role.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(role => role.Roles)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <div class="d-flex flex-column justify-content-center">
                            @foreach (var role in user.Roles)
                            {
                                <p class="m-0">@role</p>
                                <p class="m-0 text-success">@user.packName</p>

                            }
                        </div>
                    </td>
                    <td><a class="btn btn-outline-info px-4" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                    <td><button class="btn btn-danger delete" data-id="@user.Id" data-username="@user.UserName">Delete</button></td>
                </tr>
                
            }
            
        </tbody>
    </table>
        <div class="position-fixed top-0 start-0 end-0 bottom-0 d-flex justify-content-center align-items-center popUp d-none">
            <div class="w-50 h-50 d-flex flex-column justify-content-evenly align-items-center popinner">
                <h4 id="delete-message"></h4>
                <div class="botMain">
                    <a class="btn btn-danger px-5 deleteConfirm bot" id="confirm-delete">Delete</a>
                    <button class="btn btn-secondary px-5 close bot">Close</button>
                </div>
            </div>
        </div>
    
}
else
{
    <div class="mt-5 d-flex justify-content-center">
        <h3>There is No Users yet</h3>
    </div>
}
</div>
<script src="~/js/JavaScript.js"></script>
@section scripts {
    
    <partial name="_ValidationScriptsPartial" />
}

